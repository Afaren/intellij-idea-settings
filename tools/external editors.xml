<toolSet name="external editors">
  <tool name="vim" description="open current file in vim" showInMainMenu="true" showInEditor="true" showInProject="true" showInSearchPopup="true" disabled="false" useConsole="false" showConsoleOnStdOut="false" showConsoleOnStdErr="false" synchronizeAfterRun="true">
    <exec>
      <option name="COMMAND" value="/usr/bin/vim" />
      <option name="PARAMETERS" value="$FilePath$ &quot;+norm $LineNumber$G0$ColumnNumber$lh&quot;" />
      <option name="WORKING_DIRECTORY" value="$FileDir$" />
    </exec>
  </tool>
</toolSet>